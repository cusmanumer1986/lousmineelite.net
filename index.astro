---
import "../../styles.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lousmine Elite Travel & Hospitality</title>
  </head>
  <body class="m-0 p-0 font-sans">
    <section
      class="relative h-screen bg-cover bg-center text-white flex flex-col justify-center items-center px-4"
      style="background-image: url('/bg.jpeg');"
    >
      <!-- Logo -->
      <div class="absolute top-6 left-6">
        <img src="/logo.png" alt="Logo" class="h-10 w-auto" />
      </div>

      <!-- Main Text -->
      <h1 class="text-4xl md:text-6xl font-bold text-center text-[#1d3557]">
        Lousmine Elite<br />Travel & Hospitality
      </h1>
      <p class="text-lg md:text-xl mt-4 text-center text-[#264653] max-w-2xl">
        It’s the beginning of your journey – where safety meets luxury and service meets excellence
      </p>

      <!-- Book Now Button -->
      <a
        href="#"
        class="mt-8 bg-yellow-400 hover:bg-yellow-300 text-black font-semibold px-6 py-3 rounded shadow"
      >
        BOOK NOW
      </a>
    </section>
  </body>
</html>
