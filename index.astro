---
import Layout from '../layouts/Layout.astro'
import { SEO } from '../components/SEO.astro'
---

<Layout>
  <SEO 
    title="Lousmine Elite Travel & Hospitality – Luxury Travel Services"
    description="Explore luxury travel packages, premium hospitality, airport transfers, and 5-star hotel bookings with Lousmine Elite Travel & Hospitality. Serving Gulf clients with excellence."
    image="/hero-bg.jpg"
    url="https://lousmineelite.net"
  />

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <!-- Navbar -->
  <nav class="fixed top-0 w-full bg-white shadow z-50">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <div class="text-xl font-bold text-yellow-600"><i class="fas fa-plane-departure mr-1"></i> Lousmine Elite</div>
      <ul class="flex gap-6 text-sm font-medium">
        <li><a href="#about" class="hover:text-yellow-500"><i class="fas fa-info-circle mr-1"></i>About</a></li>
        <li><a href="#mission" class="hover:text-yellow-500"><i class="fas fa-bullseye mr-1"></i>Mission</a></li>
        <li><a href="#services" class="hover:text-yellow-500"><i class="fas fa-concierge-bell mr-1"></i>Services</a></li>
        <li><a href="#booking" class="hover:text-yellow-500"><i class="fas fa-calendar-check mr-1"></i>Book</a></li>
        <li><a href="#contact" class="hover:text-yellow-500"><i class="fas fa-envelope mr-1"></i>Contact</a></li>
      </ul>
    </div>
  </nav>

  <!-- Hero -->
  <section class="relative bg-cover bg-center h-screen pt-20" style="background-image: url('/hero-bg.jpg');">
    <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center">
      <div class="text-center text-white px-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Lousmine Elite <br /> Travel & Hospitality</h1>
        <p class="mb-6 text-lg md:text-xl">Where Gulf Elegance Meets World-Class Travel</p>
        <a href="#booking" class="bg-yellow-400 text-black px-6 py-3 rounded font-bold hover:bg-yellow-500 transition">BOOK NOW</a>
      </div>
    </div>
  </section>

  <!-- About -->
  <section id="about" class="py-16 bg-white text-center">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4"><i class="fas fa-info-circle mr-2"></i>About Us</h2>
      <p class="text-lg text-gray-700">Lousmine Elite offers luxurious, customized travel solutions for Gulf clients seeking comfort, class, and cultural excellence across Europe and beyond.</p>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section id="mission" class="py-16 bg-gray-50 text-center">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4"><i class="fas fa-bullseye mr-2"></i>Our Mission</h2>
      <p class="mb-6 text-gray-700">To provide seamless, secure, and elegant travel experiences for clients from the Gulf region, ensuring exceptional care from booking to arrival.</p>
      <h2 class="text-3xl font-bold mb-4"><i class="fas fa-eye mr-2"></i>Our Vision</h2>
      <p class="text-gray-700">To become the most trusted luxury travel partner for Gulf clients exploring Europe, known for excellence and cultural understanding.</p>
    </div>
  </section>

  <!-- Services -->
  <section id="services" class="py-16 bg-white text-center">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-10"><i class="fas fa-concierge-bell mr-2"></i>Our Services</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gray-100 p-6 rounded shadow">
          <i class="fas fa-hotel text-3xl text-yellow-500 mb-3"></i>
          <h3 class="text-xl font-semibold mb-2">Hotel Bookings</h3>
          <p>Access to the best 4–5 star hotels in city centers across Europe.</p>
        </div>
        <div class="bg-gray-100 p-6 rounded shadow">
          <i class="fas fa-car text-3xl text-yellow-500 mb-3"></i>
          <h3 class="text-xl font-semibold mb-2">Airport Transfers</h3>
          <p>Private, reliable, and luxury transportation from and to airports.</p>
        </div>
        <div class="bg-gray-100 p-6 rounded shadow">
          <i class="fas fa-passport text-3xl text-yellow-500 mb-3"></i>
          <h3 class="text-xl font-semibold mb-2">Visa Support</h3>
          <p>Personalized visa consultation for all your travel destinations.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Booking with Supabase -->
  <section id="booking" class="py-16 bg-gray-50 text-center">
    <div class="max-w-xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-6"><i class="fas fa-calendar-check mr-2"></i>Book Now</h2>
      <form id="booking-form" class="grid gap-4 text-left">
        <input id="name" placeholder="Full Name" required class="w-full p-3 border rounded" />
        <input type="email" id="email" placeholder="Email" required class="w-full p-3 border rounded" />
        <input id="phone" placeholder="Phone Number" class="w-full p-3 border rounded" />
        <textarea id="message" rows="4" placeholder="Your Message" class="w-full p-3 border rounded"></textarea>
        <button type="submit" class="bg-yellow-400 px-6 py-3 rounded font-bold hover:bg-yellow-500 transition">Submit</button>
      </form>
      <p id="response-message" class="text-green-600 mt-4 hidden">Thank you! Your booking has been received.</p>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-16 bg-white text-center">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-6"><i class="fas fa-envelope mr-2"></i>Contact Us</h2>
      <p class="mb-2"><i class="fas fa-envelope-open-text text-blue-600 mr-1"></i><a href="mailto:lousmineelite@gmail.com">lousmineelite@gmail.com</a></p>
      <p><i class="fas fa-phone text-blue-600 mr-1"></i> +44 1234 567890</p>
    </div>
  </section>

  <!-- WhatsApp Floating Button -->
  <a 
    href="https://wa.me/441234567890" 
    class="fixed bottom-6 right-6 bg-green-500 text-white p-4 rounded-full shadow-lg hover:bg-green-600 transition"
    target="_blank"
    aria-label="Chat on WhatsApp"
  >
    <i class="fab fa-whatsapp text-2xl"></i>
  </a>

  <!-- Footer -->
  <footer class="bg-black text-white py-10 mt-10">
    <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-3 gap-6 text-center md:text-left">
      <div>
        <h3 class="text-lg font-bold mb-2"><i class="fas fa-globe mr-1"></i> Lousmine Elite</h3>
        <p>Luxury travel services tailored for Gulf clients seeking premium experiences in Europe.</p>
      </div>
      <div>
        <h3 class="text-lg font-bold mb-2"><i class="fas fa-link mr-1"></i> Quick Links</h3>
        <ul>
          <li><a href="#about" class="hover:underline">About</a></li>
          <li><a href="#services" class="hover:underline">Services</a></li>
          <li><a href="#booking" class="hover:underline">Book</a></li>
          <li><a href="#contact" class="hover:underline">Contact</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-bold mb-2"><i class="fas fa-share-alt mr-1"></i> Follow Us</h3>
        <div class="flex gap-4 justify-center md:justify-start">
          <a href="#" class="hover:text-yellow-400"><i class="fab fa-facebook"></i></a>
          <a href="#" class="hover:text-yellow-400"><i class="fab fa-instagram"></i></a>
          <a href="#" class="hover:text-yellow-400"><i class="fab fa-twitter"></i></a>
        </div>
      </div>
    </div>
    <div class="mt-6 text-center text-sm text-gray-400">
      &copy; 2025 Lousmine Elite Travel & Hospitality. All rights reserved.
    </div>
  </footer>

  <!-- Supabase Script -->
  <script type="module">
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm'

    const SUPABASE_URL = 'https://your-project.supabase.co'
    const SUPABASE_ANON_KEY = 'your-anon-key'

    const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY)
    const form = document.getElementById('booking-form')
    const message = document.getElementById('response-message')

    form.addEventListener('submit', async (e) => {
      e.preventDefault()

      const name = document.getElementById('name').value
      const email = document.getElementById('email').value
      const phone = document.getElementById('phone').value
      const msg = document.getElementById('message').value

      const { error } = await supabase
        .from('bookings')
        .insert([{ name, email, phone, message: msg }])

      if (error) {
        alert('Error submitting booking. Please try again.')
        console.error(error)
      } else {
        form.reset()
        message.classList.remove('hidden')
      }
    })
  </script>

</Layout>

